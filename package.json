{
  "name": "wgl-toolchain",
  "displayName": "WGLScript toolchain",
  "description": "WGLScript formatter, linter, intellisense for VS Code",
  "version": "0.0.3",
  "publisher": "etherealhero",
  "repository": "https://github.com/Microsoft/vscode-extension-samples/wgl-toolchain",
  "keywords": ["wglscript", "LSP", "formatter", "linter", "intellisense"],
  "author": "Maxim Gutsan",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:javascript"],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build:parser": "peggy src/compiler/parser.pegjs --format es --dts",
    "compile": "npm run build:parser && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vscode-test",
    "format": "npx @biomejs/biome check --write"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "WGLScript",
      "properties": {
        "wglscript.globalscript.enable": {
          "type": "boolean",
          "scope": "resource",
          "default": "true",
          "description": "Enable global script module"
        },
        "wglscript.globalscript.path": {
          "type": "string",
          "scope": "resource",
          "default": "Lib/AppGlobalScript.js",
          "description": "Global script module absolute path of wglscript project e.g. 'Lib/AppGlobalScript.js'"
        }
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20",
    "@types/vscode": "^1.73.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "mocha": "^10.2.0",
    "peggy": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@typescript/vfs": "^1.6.0",
    "source-map": "^0.7.4"
  }
}
